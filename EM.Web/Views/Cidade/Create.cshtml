@model Em.Web.Models.CidadeModel

@{
    ViewData["Title"] = "Adicionar Cidade";
    var isEdit = Model.Codigo > 0;
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 text-primary fw-bold">
            <i class="bi bi-geo-alt-fill me-2"></i>
            @ViewData["Title"]
        </h1>
        <p class="text-muted mb-0">Cadastre uma nova cidade no sistema</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" id="cidadeForm">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="Codigo" />
                    }
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold">
                            Nome da Cidade <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da cidade" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="UF" class="form-label fw-semibold">
                            Unidade Federativa (UF) <span class="text-danger">*</span>
                        </label>
                        <select asp-for="UF" class="form-select">
                            <option value="">Selecione a UF...</option>
                            <option value="AC">AC - Acre</option>
                            <option value="AL">AL - Alagoas</option>
                            <option value="AP">AP - Amapá</option>
                            <option value="AM">AM - Amazonas</option>
                            <option value="BA">BA - Bahia</option>
                            <option value="CE">CE - Ceará</option>
                            <option value="DF">DF - Distrito Federal</option>
                            <option value="ES">ES - Espírito Santo</option>
                            <option value="GO">GO - Goiás</option>
                            <option value="MA">MA - Maranhão</option>
                            <option value="MT">MT - Mato Grosso</option>
                            <option value="MS">MS - Mato Grosso do Sul</option>
                            <option value="MG">MG - Minas Gerais</option>
                            <option value="PA">PA - Pará</option>
                            <option value="PB">PB - Paraíba</option>
                            <option value="PR">PR - Paraná</option>
                            <option value="PE">PE - Pernambuco</option>
                            <option value="PI">PI - Piauí</option>
                            <option value="RJ">RJ - Rio de Janeiro</option>
                            <option value="RN">RN - Rio Grande do Norte</option>
                            <option value="RS">RS - Rio Grande do Sul</option>
                            <option value="RO">RO - Rondônia</option>
                            <option value="RR">RR - Roraima</option>
                            <option value="SC">SC - Santa Catarina</option>
                            <option value="SP">SP - São Paulo</option>
                            <option value="SE">SE - Sergipe</option>
                            <option value="TO">TO - Tocantins</option>
                        </select>
                        <span asp-validation-for="UF" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Voltar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>
                                    @(isEdit ? "Atualizar" : "Cadastrar")
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        @if (isEdit)
        {
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>
                        Informações da Cidade
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Código:</small>
                        <div class="fw-semibold">@Model.Codigo.ToString("D3")</div>
                    </div>
                    <div class="mb-0">
                        <small class="text-muted">Data de Cadastro:</small>
                        <div class="fw-semibold">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0 fw-semibold">
                        <i class="bi bi-lightbulb me-2"></i>
                        Dicas Importantes
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <small>Nome da cidade deve ter entre 3 e 50 caracteres</small>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <small>Selecione a UF correta do estado</small>
                        </li>
                        <li class="mb-0">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <small>Evite cadastrar cidades duplicadas</small>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {

    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var nome = document.getElementById('Nome');
            var uf = document.getElementById('UF');
            var form = document.getElementById('cidadeForm');
            if (nome) {
                nome.addEventListener('blur', function () {
                    var n = nome.value.trim();
                    var err = document.getElementById('Nome-error');
                    if (n.length < 3 || n.length > 100) {
                        nome.classList.add('is-invalid');
                        if (!err) {
                            var span = document.createElement('span');
                            span.id = 'Nome-error';
                            span.className = 'text-danger';
                            span.textContent = 'Nome deve ter entre 3 e 100 caracteres';
                            nome.insertAdjacentElement('afterend', span);
                        }
                    } else {
                        nome.classList.remove('is-invalid');
                        if (err) err.remove();
                    }
                });
            }
            if (uf) {
                uf.addEventListener('change', function () {
                    if (!uf.value) {
                        uf.classList.add('is-invalid');
                    } else {
                        uf.classList.remove('is-invalid');
                    }
                });
            }
            if (form) {
                form.addEventListener('submit', function (e) {
                    var n = nome ? nome.value.trim() : '';
                    var u = uf ? uf.value : '';
                    var valid = true;
                    if (n.length < 3 || n.length > 100) {
                        nome && nome.classList.add('is-invalid');
                        valid = false;
                    }
                    if (!u) {
                        uf && uf.classList.add('is-invalid');
                        valid = false;
                    }
                    if (!valid) e.preventDefault();
                });
            }
        });
    </script>
}

@model IEnumerable<Em.Web.Models.AlunoModel>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 text-primary fw-bold">
            <i class="bi bi-people-fill me-2"></i>
            Lista de Alunos
        </h1>
        <p class="text-muted mb-0">Gerencie os alunos cadastrados no sistema</p>
    </div>
    <div class="col-md-4 text-md-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i>
            Novo Aluno
        </a>
        <button class="btn btn-outline-primary fw-semibold" onclick="gerarRelatorio()">
            <i class="bi bi-file-earmark-pdf me-1"></i>
            Relatório
        </button>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="searchType" class="form-label">Tipo de Busca</label>
                <select id="searchType" class="form-select">
                    <option value="nome">Nome</option>
                    <option value="matricula">Matrícula</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="searchInput" class="form-label">Buscar</label>
                <input type="text" id="searchInput" class="form-control" placeholder="Digite o termo de busca...">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="button" class="btn btn-outline-primary w-100" onclick="filtrarTabela()">
                    <i class="bi bi-search me-1"></i>
                    Buscar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-semibold">Lista de Alunos</h5>
        <span class="badge bg-secondary rounded-pill">@Model.Count() aluno(s)</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="alunosTable">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">Matrícula</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">Nome</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">CPF</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">Idade</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">Sexo</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">Cidade</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small">UF</th>
                        <th class="border-0 fw-semibold text-uppercase text-muted small text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    <span class="badge bg-primary">@item.Matricula</span>
                                </td>
                                <td class="align-middle fw-medium">@item.Nome</td>
                                <td class="align-middle">@item.CPFFormatado</td>
                                <td class="align-middle">
                                    <span class="badge bg-secondary">@item.Idade anos</span>
                                </td>
                                <td class="align-middle">
                                    @if (item.Sexo == EM.Domain.EnumeradorSexo.Masculino)
                                    {
                                        <span class="badge bg-info">M</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">F</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (!string.IsNullOrEmpty(item.CidadeNome))
                                    {
                                        <span class="badge bg-success">@item.CidadeNome</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">Não informada</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (!string.IsNullOrEmpty(item.UF))
                                    {
                                        <span class="badge bg-dark">@item.UF</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">--</span>
                                    }
                                </td>
                                <td class="align-middle text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Matricula" class="btn btn-outline-primary action-btn" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger action-btn" title="Excluir"
                                                onclick="confirmarExclusao('@item.Matricula', '@item.Nome')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                <p>Nenhum aluno encontrado</p>
                                <a asp-action="Create" class="btn btn-primary btn-sm">
                                    <i class="bi bi-person-plus me-1"></i>
                                    Cadastrar Primeiro Aluno
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
</div>
@if (Model != null && Model.Any())
{
    <div class="card-footer bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">Mostrando @Model.Count() aluno(s)</small>
        </div>
    </div>
}
</div>


<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirmar Exclusão
                </h5>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o aluno <strong id="alunoNome"></strong>?</p>
                <p class="text-muted mb-0">Esta ação não pode ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Cancelar
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarExclusao(matricula, nome) {
            document.getElementById('alunoNome').textContent = nome;
            document.getElementById('deleteForm').setAttribute('action', '/Aluno/Delete/' + matricula);
            var modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
            modal.show();
        }
        function filtrarTabela() {
            var tipoBusca = document.getElementById('searchType').value;
            var termoBusca = document.getElementById('searchInput').value.toLowerCase();
            var tabela = document.getElementById('alunosTable');
            var linhas = tabela.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            for (var i = 0; i < linhas.length; i++) {
                var colunas = linhas[i].getElementsByTagName('td');
                var deveMostrar = false;

                if (termoBusca === '') {
                    deveMostrar = true;
                } else {
                    if (tipoBusca === 'nome' && colunas[1]) {
                        var nome = colunas[1].textContent.toLowerCase();
                        deveMostrar = nome.includes(termoBusca);
                    } else if (tipoBusca === 'matricula' && colunas[0]) {
                        var matricula = colunas[0].textContent.toLowerCase();
                        deveMostrar = matricula.includes(termoBusca);
                    }
                }

                linhas[i].style.display = deveMostrar ? '' : 'none';
            }
        }

        function gerarRelatorio() {
            const botao = event?.currentTarget || document.querySelector('button[onclick="gerarRelatorio()"]');
            const htmlOriginal = botao ? botao.innerHTML : null;
            try {
                if (botao) {
                    botao.disabled = true;
                    botao.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Gerando...';
                }

                const tipoBusca = document.getElementById('searchType').value;
                const valorBusca = document.getElementById('searchInput').value;
                const params = new URLSearchParams({ searchType: tipoBusca, searchValue: valorBusca });
                const url = `/Relatorio/AlunosPDF?${params.toString()}`;
                window.open(url, '_blank');
            } catch (erro) {
                alert(`Falha inesperada ao emitir relatório: ${erro}`);
            } finally {
                if (botao && htmlOriginal) {
                    botao.disabled = false;
                    botao.innerHTML = htmlOriginal;
                }
            }
        }

        document.getElementById('searchInput').addEventListener('keyup', function(e) {
            if (e.key === 'Enter') {
                filtrarTabela();
            }
        });
    </script>
}
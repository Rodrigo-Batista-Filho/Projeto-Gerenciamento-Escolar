@model Em.Web.Models.AlunoModel

@{
    ViewData["Title"] = Model.Matricula == 0 ? "Adicionar Aluno" : "Editar Aluno";
    var isEdit = Model.Matricula > 0;
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 text-primary fw-bold">
            <i class="bi bi-person-plus-fill me-2"></i>
            @ViewData["Title"]
        </h1>
        <p class="text-muted mb-0">Preencha os dados do aluno</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" id="alunoForm">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="Matricula" />
                    }
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Nome" class="form-label fw-semibold">
                                Nome Completo <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do aluno" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="CPF" class="form-label fw-semibold">CPF</label>
                            <input asp-for="CPF" class="form-control" placeholder="Somente números" inputmode="numeric" pattern="\d*" maxlength="11" oninput="this.value=this.value.replace(/\D/g,'')" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-4">
                            <label asp-for="Nascimento" class="form-label fw-semibold">
                                Data de Nascimento <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nascimento" type="date" class="form-control" />
                            <span asp-validation-for="Nascimento" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="Sexo" class="form-label fw-semibold">
                                Sexo <span class="text-danger">*</span>
                            </label>
                            <div class="d-flex gap-3 mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Sexo" value="@EM.Domain.EnumeradorSexo.Masculino" id="sexoMasculino">
                                    <label class="form-check-label" for="sexoMasculino">
                                        Masculino
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Sexo" value="@EM.Domain.EnumeradorSexo.Feminino" id="sexoFeminino">
                                    <label class="form-check-label" for="sexoFeminino">
                                        Feminino
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="CidadeCodigo" class="form-label fw-semibold">
                                Cidade <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CidadeCodigo" class="form-select" asp-items='ViewBag.Cidades != null ? new SelectList(ViewBag.Cidades, "Codigo", "Nome", Model.CidadeCodigo) : new SelectList(new List<SelectListItem>())'>
                                <option value="">Selecione uma cidade...</option>
                            </select>
                            <span asp-validation-for="CidadeCodigo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Voltar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>
                                    @(isEdit ? "Atualizar" : "Cadastrar")
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0 fw-semibold">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações Importantes
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <small>Campos marcados com <span class="text-danger">*</span> são obrigatórios</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <small>CPF deve ser válido e único no sistema</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <small>Nome deve ter entre 3 e 100 caracteres</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <small>Data de nascimento deve ser válida</small>
                    </li>
                    <li class="mb-0">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <small>Cidade deve ser selecionada da lista</small>
                    </li>
                </ul>
            </div>
        </div>
        
        @if (isEdit)
        {
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0 fw-semibold">
                        <i class="bi bi-person-badge me-2"></i>
                        Dados do Aluno
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Matrícula:</small>
                        <div class="fw-semibold">@Model.Matricula</div>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Idade:</small>
                        <div class="fw-semibold">@Model.Idade anos</div>
                    </div>
                    <div class="mb-0">
                        <small class="text-muted">Sexo:</small>
                        <div class="fw-semibold">@Model.SexoDescricao</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {

    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validação de CPF em tempo real
            var cpfInput = document.getElementById('CPF');
            if (cpfInput) {
                cpfInput.addEventListener('blur', function() {
                    var cpf = cpfInput.value.replace(/\D/g, '');
                    if (cpf.length === 11) {
                        if (!validarCPF(cpf)) {
                            cpfInput.classList.add('is-invalid');
                            if (!document.getElementById('CPF-error')) {
                                var span = document.createElement('span');
                                span.id = 'CPF-error';
                                span.className = 'text-danger';
                                span.textContent = 'CPF inválido';
                                cpfInput.insertAdjacentElement('afterend', span);
                            }
                        } else {
                            cpfInput.classList.remove('is-invalid');
                            var err = document.getElementById('CPF-error');
                            if (err) err.remove();
                        }
                    }
                });
            }
            
            // Validação de idade
            var nascimentoInput = document.getElementById('Nascimento');
            if (nascimentoInput) {
                nascimentoInput.addEventListener('change', function() {
                    var val = nascimentoInput.value;
                    if (!val) return;
                    var dataNascimento = new Date(val);
                    var hoje = new Date();
                    var idade = hoje.getFullYear() - dataNascimento.getFullYear();
                    var mes = hoje.getMonth() - dataNascimento.getMonth();
                    
                    if (mes < 0 || (mes === 0 && hoje.getDate() < dataNascimento.getDate())) {
                        idade--;
                    }
                    
                    if (idade < 3 || idade > 120) {
                        nascimentoInput.classList.add('is-invalid');
                        if (!document.getElementById('Nascimento-error-idade')) {
                            var spanIdade = document.createElement('span');
                            spanIdade.id = 'Nascimento-error-idade';
                            spanIdade.className = 'text-danger';
                            spanIdade.textContent = 'Idade deve estar entre 3 e 120 anos';
                            nascimentoInput.insertAdjacentElement('afterend', spanIdade);
                        }
                    } else {
                        nascimentoInput.classList.remove('is-invalid');
                        var errIdade = document.getElementById('Nascimento-error-idade');
                        if (errIdade) errIdade.remove();
                    }
                });
            }
            
            // Validação de nome
            var nomeInput = document.getElementById('Nome');
            if (nomeInput) {
                nomeInput.addEventListener('blur', function() {
                    var nome = nomeInput.value.trim();
                    if (nome.length < 3 || nome.length > 100) {
                        nomeInput.classList.add('is-invalid');
                    } else {
                        nomeInput.classList.remove('is-invalid');
                    }
                });
            }
            
            function validarCPF(cpf) {
                if (!cpf || cpf.length !== 11 || !/^\d{11}$/.test(cpf)) return false;
                if (/^(\d)\1{10}$/.test(cpf)) return false;
                var add = 0;
                for (var i = 0; i < 9; i++) add += parseInt(cpf.charAt(i)) * (10 - i);
                var rev = 11 - (add % 11);
                if (rev === 10 || rev === 11) rev = 0;
                if (rev !== parseInt(cpf.charAt(9))) return false;
                add = 0;
                for (var j = 0; j < 10; j++) add += parseInt(cpf.charAt(j)) * (11 - j);
                rev = 11 - (add % 11);
                if (rev === 10 || rev === 11) rev = 0;
                return rev === parseInt(cpf.charAt(10));
            }
        });
    </script>
}